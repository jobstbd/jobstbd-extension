{
    "name":"JobsTBD Easy Apply",
    "version":"0.0.0.1",
    "description":"Apply for any job with one click",
    "permissions":[
        "tabs",
        "storage",
        "activeTab",
        "cookies"
    ],
    "icons": {
        "16": "/icons/16.png",
        "32": "/icons/32.png",
        "48": "/icons/48.png",
        "128": "/icons/128.png"
      },
    "host_permissions":[
        "https://jobstbd.com/*"
    ],
    "background":{
        "service_worker":"background.js"
    },
    "web_accessible_resources":[
       {
           "matches":[
               "https://*/*"
           ],
           "resources":[
               "images/apply.png"
           ]}
    ],
    "action":{
        "default_popup":"popup/index.html",
        "default_title":"JobsTBD Easy Apply"
    },
    "manifest_version":3
}